// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @map("_id") @db.ObjectId
  name       String
  username   String
  email      String
  password   String?
  idsLinks   String[]
}

model Link {
  id          String @id @map("_id") @db.ObjectId
  idUrl       String
  originUrl   String
  shortUrl    String
  title       String?
  description String?
  urlImg      String?
  pixel       String?
}

model LinkAnalytics {
  id         String  @id @map("_id") @db.ObjectId
  analytics  Json[]
}

enum Role {
  USER
  ADMIN
}
