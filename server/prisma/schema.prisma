// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @map("_id") @db.ObjectId
  name       String
  username   String
  email      String
  password   String?
  role       Role             @default(USER)
  createAt  DateTime @default(now())
}

model Link {
  id          String @id @map("_id") @db.ObjectId
  idUrl       String
  idUser      String
  originUrl   String
  shortUrl    String
  title       String?
  description String?
  urlImg      String?
  pixel       String?
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LinkAnalytics {
  id         String  @id @map("_id") @db.ObjectId
  idUrl      String
  idUser     String
  clicks     Int?
  analytics  Json[]
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
